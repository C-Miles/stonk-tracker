<h1 class="mt-2">Friends</h1>

<div class='mt-5'>
  <div class='mobile'>
    <h3>Search Friends</h3>
  </div>

  <div class="mobile">
    <%= form_tag search_friend_path, remote: true, method: :get do %>
      <div class="form-group row nowrap">
        <div class="col-sm-9 no-right-padding">
          <%= text_field_tag :friend, params[:friend], placeholder: "Name/email", autofocus: true, class: "form-control form-control-lg" %>
        </div>
        <div class="col-sm-3 no-left-padding">
          <%= button_tag type: :submit, class: "btn btn-success" do %>
            <%= fa_icon 'search 2x' %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div id="friend-results">
</div>

<% if !@friends.empty? %>
  <%= render 'friends/list' %>
<% end %>
