<h1 class="mt-2">My Portfolio</h1>

<div class='search-area'>
  <div class='mobile'>
    <h3>Search Stocks</h3>
  </div>

  <div class="mobile">
    <%= form_tag search_stock_path, remote: true, method: :get do %>
      <div class='form-group row nowrap'>
        <div class='col-sm-9 no-right-padding'>
          <%= text_field_tag :stock, params[:stock], placeholder: 'Stock ticker', autofocus: true, class: "form-control form-control-lg"  %>
        </div>
        <div class='col-sm-3 no-left-padding'>
          <%= button_tag type: :submit, class: "btn btn-success" do %>
            <%= fa_icon 'search 2x' %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div id='results'>
</div>

<% if !@tracked_stocks.empty? %>
  <%= render 'stocks/list'%>
<% end %>
